<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopEase - Shope with Ease</title>
    <style>
        *,
        *:before,
        *:after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Open Sans', Helvetica, Arial, sans-serif;
            background: #ffffff;
        }

        input,
        button {
            border: none;
            outline: none;
            background: none;
            font-family: 'Open Sans', Helvetica, Arial, sans-serif;
        }

        .tip {
            font-size: 20px;
            margin: 40px auto 50px;
            text-align: center;
        }

        .cont {
            border-radius: 20px;
            overflow: hidden;
            position: relative;
            width: 900px;
            height: 470px;
            margin: 50px auto 100px;
            background: #ffd36d;
            box-shadow: -10px -10px 15px rgba(255, 255, 255, 0.3), 10px 10px 15px rgba(70, 70, 70, 0.15), inset -10px -10px 15px rgba(255, 255, 255, 0.3), inset 10px 10px 15px rgba(70, 70, 70, 0.15);
        }

        .form {
            position: relative;
            width: 100%;
            height: 100%;
            padding: 30px 30px 0;
        }

        button {
            display: block;
            margin: 0 auto;
            width: 260px;
            height: 36px;
            border-radius: 30px;
            color: #fff;
            font-size: 15px;
            cursor: pointer;
        }

        h2 {
            width: 100%;
            font-size: 26px;
            text-align: center;
        }

        label {
            width: 80%;
            margin: 25px auto 0;
            text-align: center;
            display: flex;
            flex-direction: row;
        }

        label span {
            font-size: 14px;
            color: #000000;
            text-transform: uppercase;
            font-weight: 600;
            flex: 1;
            margin: inherit;
        }

        input {
            display: block;
            width: 100%;
            margin-top: 5px;
            padding-bottom: 5px;
            font-size: 16px;
            border-bottom: 2px solid rgba(0, 0, 0, 0.4);
            text-align: center;
            flex: 3;
        }

        .submit {
            margin-top: 40px;
            margin-bottom: 14px;
            background: #b48b52;
            text-transform: uppercase;
        }

        .form__checkbox {
            display: flex;
            position: relative;
            width: 200px;
            justify-content: space-evenly;
            margin-top: 8px;
            flex: 3;
        }

        .checkbox p {
            margin-top: 8px;
        }

        .male_checkbox {
            height: 22px;
        }

        .female_checkbox {
            height: 22px;
        }

        .other_checkbox {
            height: 22px;
        }
    </style>

    <script defer>
        async function Submit(event, uid) {
        event.preventDefault();
        console.log("User ID:", uid);
        const fullname = document.getElementById('fullname').value;
        const address = document.getElementById('address').value;
        const phone = document.getElementById('phone').value;
        const genderElement = document.querySelector('input[name="option1"]:checked');

        // Validate gender selection
        if (!genderElement) {
            alert('Please select a gender');
            return;
        }
        if (!fullname) {
            alert('Please tell us your name!');
            return;
        }
        if (!address) {
            alert('Please enter initial address!');
            return;
        }
        if (!phone) {
            alert('Please enter initial phone number!');
            return;
        }

        const gender = genderElement.value;

        try {
            const res = await fetch('/user/edit', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    uid: uid,
                    name: fullname,
                    info: [{ address: address, phone: phone, name: fullname, default: true }],
                    gender: gender,
                }),
            });

            if(res.redirected) {
                window.location.href = res.url;
                return
            }

            if (!res.ok) {
                const error = await res.json();
                alert(`Error: ${error.message || 'Something went wrong'}`);
            }
        } catch (error) {
            console.error('Error submitting the form:', error.message);
            alert('Failed to update user information. Please try again later.');
        }
    }
</script>
</head>

<body>
    <div class="cont">
        <div class="form">
            <h2>Tell us more about you</h2>
            <label>
                <span>fullname</span>
                <input type="text" id="fullname" />
            </label>
            <label>
                <span>address</span>
                <input type="text" id="address" />
            </label>
            <label>
                <span>Phone number</span>
                <input type="text" id="phone" />
            </label>
            <label>
                <span>Gender</span>

                <label class="form__checkbox" id="gender">
                    <div class="checkbox">
                        <input type="radio" name="option1" value="male" class="male_checkbox">
                        <span>Male</span>
                    </div>

                    <div class="checkbox">
                        <input type="radio" name="option1" value="female" class="female_checkbox">
                        <span>Female</span>
                    </div>

                    <div class="checkbox">
                        <input type="radio" name="option1" value="other" class="other_checkbox">
                        <span>Other</span>
                    </div>

                </label>
            </label>
            <button type="button" class="submit" id="loginButton" onclick="Submit(event, '<%= uid %>')">That's all</button>

        </div>
    </div>
</body>

</html>