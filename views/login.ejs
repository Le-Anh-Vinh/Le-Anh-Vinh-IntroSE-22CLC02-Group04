<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopEase - Shopping with ease</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script defer>
        const regexEmail = /^[a-z][a-z0-9_\.]{5,32}@[a-z0-9]{2,}(\.[a-z0-9]{2,}){1,3}$/;

        async function login(event) {
            event.preventDefault();
            const submitBtn = document.getElementById('submitBtn');
            const email = document.getElementById('staticEmail').value.trim();
            const password = document.getElementById('staticPassword').value;

            if (!regexEmail.test(email)) {
                alert("Invalid email format.");
                return;
            }
            if (password === "") {
                alert("Password cannot be empty.");
                return;
            }

            const user = { email: email, password: password };

            try {
                submitBtn.disabled = true;
                submitBtn.innerText = "Submitting...";

                const response = await fetch('/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(user),
                });

                if (response.ok) {
                    const result = await response.json();
                    alert('User added successfully!');
                } else {
                    const error = await response.json();
                    alert(`Failed to add user: ${error.message || 'Unknown error'}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while submitting the form.');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerText = "Submit";
            }
        }
    </script>

</head>

<body>
    <div class="container">
        <div class="card">
            <div class="card-head bg-primary text-white">
                <div class="container-fluid d-flex h2 justify-content-center">
                    Log In
                </div>
            </div>
            <div class="card-body">
                <form style="margin-top: 60px; margin-bottom: 60px;">
                    <div class="form-group row mb-3">
                        <label for="staticEmail" class="col-sm-4 col-form-label text-sm-end">Emai:</label>
                        <div class="col-sm-6">
                            <input type="email" class="form-control" id="staticEmail" aria-describedby="emailHelp"
                                placeholder="Enter email" required>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="staticPassword" class="col-sm-4 col-form-label text-sm-end">Password:</label>
                        <div class="col-sm-6">
                            <input type="password" class="form-control" id="staticPassword" placeholder="Enter password"
                                required>
                        </div>
                    </div>
                    <br>

                    <div class="form-group row">
                        <label class="col-sm-5"></label>
                        <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary" id="submitBtn"
                                onclick="login(event)">Submit</button>
                        </div>
                    </div>
                    <br>

                    <div class="form-group row mb-3">
                        <label class="col-sm-4 col-form-label text-sm-end">Don't have account yet?</label>
                        <div class="col-sm-6">
                            <a class="btn btn-primary" href="/signup">Sign Up</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>

</html>